generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id            String         @id @unique
  name          String
  email         String         @unique
  password      String
  updated_at    DateTime
  created_at    DateTime
  refresh_token RefreshTokens?

  @@map("users")
}

model RefreshTokens {
  id            String   @id @unique
  user_id       String   @unique
  refresh_token String   @unique
  expires_date  DateTime
  updated_at    DateTime
  created_at    DateTime
  user          Users    @relation(fields: [user_id], references: [id])

  @@map("refresh_tokens")
}
